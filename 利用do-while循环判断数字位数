package hello;

import java.util.Scanner;

public class Hello {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.print("请输入数字：");
		Scanner in = new Scanner(System.in);
		int number = in.nextInt();
		int count = 0;
		do
		{
			number = number/10;
			count = count + 1;
		}while (number>0);
		//这里while后接分号
		System.out.println("数字位数是：" + count);
	}
}
