package hello;

import java.util.Scanner;

public class Hello {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.print("前50个素数是：");
		int count = 0;
		int num = 1;
		for(int i=2;;i++)
		{
			num = 1;
			for(int j=2;j<i;j++)
			{
				if(i%j == 0)
				{
					num = 0;
					break;
				}
			}
			if(num == 1)
			{
				count++;
				System.out.print(i+" ");
			}
			
			if(count==50)
			{
				break;
			}
		}
	}
}
